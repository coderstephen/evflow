{
    "name": "zephyr/event-loop",
    "description": "Event loop core library with support for evented I/O, timers, callbacks, and custom sources",
    "keywords": ["async", "asynchronous", "event", "network", "io", "reactor"],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Stephen Coakley",
            "email": "me@stephencoakley.com",
            "homepage": "http://stephencoakley.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "psr/log": "~1.0"
    },
    "require-dev": {
        "monolog/monolog": "~1.12",
        "phpunit/phpunit": "~4.0"
    },
    "suggest": {
        "ext-ev": "Enables the libev backend.",
        "ext-event": "Enables the libevent backend.",
        "ext-pcntl": "Enables native process signal handling.",
        "ext-uv": "Enables the libuv backend."
    },
    "autoload": {
        "psr-4": {
            "Zephyr\\EventLoop\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zephyr\\EventLoop\\Tests\\": "tests"
        }
    }
}
